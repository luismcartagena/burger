<div class="col-4">
  <h3>The Burgers</h3>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{else}}
    <p>{{burger_name}} <button class="devour-btn btn btn-danger" data-id={{id}}>Devour</button></p>
    {{/if}}
    {{/each}}
  </ul>
</div>

<div class="col-4">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger-input">Burger Name:</label>
      <input type="text" id="burger-input" name="name">
    </div>

    <button type="submit" class="btn btn-info">Add Burger</button>
  </form>
</div>

<div class="col-4">
  <h3>Devoured Burgers</h3>
  {{#each burgers}}
  {{#if devoured}}
    <p>{{burger_name}}</p>
  {{/if}}
  {{/each}}
</div>